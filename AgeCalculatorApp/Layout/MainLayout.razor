@using System.ComponentModel.DataAnnotations
@inherits LayoutComponentBase
<div class="page">
    @* <div class="sidebar">
    <NavMenu />
    </div> *@

    <main>
        @*  <div class="top-row px-4">
        <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div> *@
        <EditForm Model="Model" OnSubmit="Calculate" FormName="age-calculator-form">
            <fieldset>
                <DataAnnotationsValidator />
                <ValidationSummary />
                <label>DAY</label>
                <label>MONTH</label>
                <label>YEAR</label>
                <InputNumber class="date-input" @bind-Value="Model!.Day" placeholder="DD" />
                <InputNumber class="date-input" @bind-Value="Model!.Month" placeholder="MM" />
                <InputNumber class="date-input" @bind-Value="Model!.Year" placeholder="YYYY" />
            </fieldset>
            <hr />
            <button type="submit">
                <img src="images/icon-arrow.svg" />
            </button>
        </EditForm>
        <p class="calculated-age">
            <span><em>38</em>years</span>
            <span><em>3</em>months</span>
            <span><em>26</em>days</span>
            @* <article class="content px-4">
            @Body
            </article> *@
        </p>
    </main>
</div>

@code {
    [SupplyParameterFromForm]
    private Input? Model { get; set; }

    protected override void OnInitialized() => Model ??= new();

    private void Calculate()
    {
        Console.WriteLine($"Calculating... Day: {Model?.Day}, Month: {Model?.Month}, Year: {Model?.Year}");
    }

    public class Input
    {
        [Required]
        public int? Day { get; set; }
        [Required]
        [Range(1, 12, ErrorMessage = "Invalid Month")]
        public int? Month { get; set; }
        [Required]
        public int? Year { get; set; }
    }
}
